{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "preserveSymlinks": true,
      "outDir": "./dist",
      "declarationDir": "./dist/@types",
      "declaration": true,
      "skipLibCheck": true,
      "strictNullChecks": false,
      "experimentalDecorators": true,
      "suppressImplicitAnyIndexErrors": true,
      "suppressExcessPropertyErrors": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "target":"es5",
      "lib": ["es2015", "dom"]
    },
    "exclude": ["./dist", "./node_modules"]
}